<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="绑定提现银行卡信息"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/xiahuaxian"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="真实姓名"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="14dp"
            android:maxLength="6"
            android:singleLine="true"
            android:hint="请输入真实姓名"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/xiahuaxian"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="电话号码"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/phone_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="14dp"
            android:singleLine="true"
            android:maxLength="11"
            android:hint="请输入手机号码"
            android:inputType="number"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/xiahuaxian"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="身份证号码"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/id_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="14dp"
            android:singleLine="true"
            android:maxLength="18"
            android:inputType="number"
            android:hint="请输入身份证号码"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/xiahuaxian"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="银行名称"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/bank_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="14dp"
            android:singleLine="true"
            android:hint="请输入银行名称"
            android:maxLength="12"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/xiahuaxian"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="银行卡号"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/bank_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="14dp"
            android:singleLine="true"
            android:hint="请输入银行卡号"
            android:maxLength="23"
            android:inputType="number"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/xiahuaxian"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="归属地"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/bank_city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="14dp"
            android:text="请选择城市"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/xiahuaxian"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="开户行网点"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/bank_adress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="14dp"
            android:singleLine="true"
            android:hint="请输入开户网点信息"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/xiahuaxian"/>

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="保存"
        android:textSize="14dp"
        android:layout_margin="30dp"
        android:background="@drawable/bank_bd"
        android:textColor="@color/white"/>
</LinearLayout>