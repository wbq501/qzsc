<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/invite_rl01"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height_48dp"
        android:background="@color/title_bg">
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/image_size_medium"
            android:layout_height="@dimen/image_size_medium"
            android:background="@color/title_bg"
            android:padding="15dp"
            android:src="@mipmap/title_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="邀队员开店"
            android:textColor="@color/title_txt"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/invite_mt1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/imbtinvite02" />

        <TextView
            android:id="@+id/invite_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/invite_mt1"
            android:layout_toRightOf="@+id/invite_mt1"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="直接邀请"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/invite_tv1"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/invite_tv1"
            android:layout_marginRight="50dp"
            android:text="分享到微信、QQ等社交平台，有人点击注册并下载登陆，即可成为你的团队队员"
            android:textColor="#80000000"
            android:textSize="14sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="20dp"
            android:background="#80000000" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/invite_mt2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/twoinvite02" />

        <TextView
            android:id="@+id/invite_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/invite_mt2"
            android:layout_toRightOf="@+id/invite_mt2"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="二维码邀请"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/invite_tv2"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/invite_tv2"
            android:layout_marginRight="50dp"
            android:text="分享到微信、QQ等社交平台，好友扫一扫或长按识别二维码后注册并下载登录，即可开店成功"
            android:textColor="#80000000"
            android:textSize="14sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/im"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:src="@mipmap/invitedir_turmpet02" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingTop="10dp"
            android:textColor="#FF0000"
            android:textSize="16sp" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/invite_textrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_shopping_gray">

        <TextView
            android:id="@+id/tv_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>