<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:textSize="18sp"
        android:id="@+id/catalog"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="#F6F6F7"
        android:paddingRight="4.0dip"

        android:shadowDx="1.0"
        android:shadowDy="1.0"
        android:shadowRadius="1.0"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:text="字母"
        android:visibility="gone"
         />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/contact_listitem"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_select_status"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/payee_switch_gray"
            android:visibility="visible"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/tongxunlu_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
      />

        <TextView
            android:textSize="16sp"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dip"
            android:gravity="center_vertical"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:singleLine="true"
            android:text="姓名" />

        <Button
            android:id="@+id/del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dip"
            android:background="@drawable/btn_style_six_normal"
            android:gravity="center_vertical"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:singleLine="true"
            android:text="删除"
            android:textColor="#ffffff"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>