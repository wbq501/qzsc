<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/trends_potrait"
            android:layout_width="@dimen/bottom_height_48dp"
            android:layout_height="@dimen/bottom_height_48dp" />
        <TextView
            android:id="@+id/trends_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/trends_potrait"
            android:layout_marginLeft="5dp"
            style="@style/common_username"/>
        <TextView
            android:id="@+id/trends_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/trends_potrait"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/trends_username"
            style="@style/common_timestamp"/>
        <ImageView
            android:id="@+id/deleteshow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:src="@mipmap/deleteet"
            android:visibility="visible"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/line"/>

    <TextView
        android:id="@+id/trends_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        style="@style/common_content"
        android:textColor="#666666"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/trends_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"></android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:id="@+id/rela_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_shopping_gray"
        android:padding="1dp"
        android:visibility="gone">
        <ImageView
            android:id="@+id/goods_image"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/goods_image"
            android:lines="1"
            android:textColor="#333333"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/sj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goods_name"
            android:layout_toRightOf="@+id/goods_image"
            android:text="¥"
            android:textColor="#333333"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/goods_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goods_name"
            android:layout_toRightOf="@+id/sj"
            android:text="36"
            android:textColor="#333336"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/yy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sj"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/goods_image"
            android:text="已有"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sj"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/yy"
            android:text="0"
            android:textColor="@color/red"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sj"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/num"
            android:text="人跟随购买"
            android:textSize="12sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rela_tui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_shopping_gray"
        android:padding="1dp"
        android:visibility="gone">
        <ImageView
            android:id="@+id/tui_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_shopping_gray"
        android:padding="3dp">

        <LinearLayout
            android:id="@+id/lin_praise"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#f8f8f8">

            <ImageView
                android:id="@+id/praise"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignBottom="@+id/comment"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="6dp"
                android:background="@mipmap/circleshow_zan"/>

            <TextView
                android:id="@+id/praisecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="赞"
                android:textColor="@color/rb_black"
                android:textSize="13sp"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/xiahuaxian"/>

        <LinearLayout
            android:id="@+id/lin_comment"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#f8f8f8">

            <ImageView
                android:id="@+id/comment"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="43dp"
                android:layout_toRightOf="@+id/praise"
                android:src="@mipmap/circleshow_ping"/>

            <TextView
                android:id="@+id/commmentcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:text="评论"
                android:textColor="@color/rb_black"
                android:textSize="13sp"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/xiahuaxian"/>

        <LinearLayout
            android:id="@+id/lin_share"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#f8f8f8">

            <ImageView
                android:id="@+id/transmit"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="43dp"
                android:src="@mipmap/circleshow_share"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/sharecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:text="分享"
                android:textColor="@color/rb_black"
                android:textSize="13sp"/>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/zan"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/praise_count"/>

        <TextView
            android:id="@+id/praise_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/zan"
            android:ellipsize="end"
            android:gravity="start"
            android:singleLine="true"

            android:textSize="13sp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/image_size_small"
            android:layout_height="@dimen/image_size_small"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/browse_count"/>

        <TextView
            android:id="@+id/browse_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="#285A97"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCommentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <TextView
        android:id="@+id/i_say"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/trends_edittext_bg"
        android:focusable="false"
        android:hint="@string/i_say"
        android:padding="10dp"
        android:textSize="14sp">

    </TextView>
</LinearLayout>