<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MyRadioButton">
        <attr name="drawablesize" format="dimension"/>
        <attr name="drawableleft" format="reference"/>
        <attr name="drawabletop" format="reference"/>
        <attr name="drawableright" format="reference"/>
        <attr name="drawablebuttom" format="reference"/>
    </declare-styleable>
    <declare-styleable name="TitleView">
        <attr name="title_bg" format="color"/>

        <attr name="leftimg" format="reference"/>
        <attr name="isleftimg" format="boolean"/>
        
        <attr name="isTitle" format="boolean"/>
        <attr name="titletext" format="string"/>
        <attr name="titleSize" format="dimension"/>
        <attr name="titileColor" format="color"/>

        <attr name="isrightImgOrText" format="boolean"/>

        <attr name="isrightimage" format="boolean"/>
        <attr name="rightimg" format="reference"/>

        <attr name="isrighttext" format="boolean"/>
        <attr name="righttext" format="string"/>
        <attr name="righttextSize" format="dimension"/>
        <attr name="righttextColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="DragTopLayout">

        <!--Set the collapse panel offset-->
        <attr name="dtlCollapseOffset" format="dimension"/>

        <!--Set enable drag over.The default value is true.-->
        <attr name="dtlOverDrag" format="boolean"/>

        <!--Open the top view after the drag layout is created. The default value is false.-->
        <attr name="dtlOpen" format="boolean"/>

        <!-- The id of the top view (which will be dragged) -->
        <attr name="dtlTopView" format="reference" />

        <!-- The content view which will be dragged together with "dtlTopView" -->
        <attr name="dtlDragContentView" format="reference" />

        <!-- True the top view can be dragged -->
        <attr name="dtlCaptureTop" format="boolean" />
    </declare-styleable>

    <declare-styleable name="Emojicon">
        <attr name="emojiconSize" format="dimension"/>
        <attr name="emojiconTextStart" format="integer"/>
        <attr name="emojiconTextLength" format="integer"/>
        <attr name="emojiconUseSystemDefault" format="boolean"/>
    </declare-styleable>

    <item type="id" name="tag_first"/>
    <item type="id" name="tag_second"/>
    <item type="id" name="tag_third"/>
    <item type="id" name="tag_forth"/>
</resources>
